@model Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<form method="post">
    <Table>
        <tr>
            <th> Название </th>
            <th> Цена </th>
            <th> Количество </th>
            <th> Тип </th>
            <th> Производитель </th>
            <th> Автор </th>
        </tr>
        <tr>
            <div hidden name="Id">@Model.Id</div>
            <td>
                <input name="Name" type="text" value="@Model.Name">
            </td>
            <td>
                <input name="Price" type="number" value="@Model.Price">
            </td>
            <td>
                <input name="Count" type="number" value="@Model.Count">
            </td>
            <td>
                <input name="Type" type="text" value="@Model.Type">
            </td>
            <td>
                <input name="Producer" type="text" value="@Model.Producer">
            </td>
            <td>
                <input name="Author" type="text" value="@Model.Author">
            </td>
        </tr>
    </Table>

    <input type="submit" value="Сохранить" />
    <button>
        <a asp-controller="Catalog" asp-action="DeleteProduct">Удалить</a>
    </button>
</form>